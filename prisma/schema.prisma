generator client {
  provider = "prisma-client-js"
}

generator kysely {
  provider = "prisma-kysely"
  output = "./kysely"
  fileName = "types.ts"
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  directUrl  = env("DIRECT_URL")
}

model Section {
	id                  Int @id @default(autoincrement())
  title               String?
  text                String
  position            Int?
  bookId              Int
  book                Book @relation(fields: [bookId], references: [id], onDelete: Cascade)
  summary             Summary?
  keywords            Keywords?
  themes              Themes?
}

model Summary {
	id                  Int @id @default(autoincrement())
  text                String
  vector_small        Unsupported("vector(1536)")?
  vector_large        Unsupported("vector(3072)")?
  sectionId           Int? @unique
  section             Section? @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  letterId            Int? @unique
  letter              Letter? @relation(fields: [letterId], references: [id], onDelete: Cascade)
}

model Keywords {
	id                  Int @id @default(autoincrement())
  keywords            String[]
  vector_small        Unsupported("vector(1536)")?
  vector_large        Unsupported("vector(3072)")?
  sectionId           Int? @unique
  section             Section? @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  letterId            Int? @unique
  letter              Letter? @relation(fields: [letterId], references: [id], onDelete: Cascade)
}

model Themes {
	id                  Int @id @default(autoincrement())
  themes              String[]
  vector_small        Unsupported("vector(1536)")?
  vector_large        Unsupported("vector(3072)")?
  sectionId           Int? @unique
  section             Section? @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  letterId            Int? @unique
  letter              Letter? @relation(fields: [letterId], references: [id], onDelete: Cascade)
}

model Translation {
	id                  Int @id @default(autoincrement())
  translator          String?
  text                String
  language            String
  url                 String?
  title               String?
  bookId              Int?
  book                Book? @relation(fields: [bookId], references: [id], onDelete: Cascade)
  letterId            Int?
  letter              Letter? @relation(fields: [letterId], references: [id], onDelete: Cascade)
}

model Commentary {
	id                  Int @id @default(autoincrement())
  commentator         String?
  text                String
  url                 String?
  title               String?
  bookId              Int?
  book                Book? @relation(fields: [bookId], references: [id], onDelete: Cascade)
  letterId            Int?
  letter              Letter? @relation(fields: [letterId], references: [id], onDelete: Cascade)
}

model Letter {
	id                  Int @id @default(autoincrement())
  title               String
  alt_title           String?
  reference           String?
  volume              String?
  pages               Int[]
  year                Int?
  season              Int?
  month               Int?
  day                 Int?
  date_text           String?
  place_text          String?
  placename           String?
  related_to          String?
  geometry            Unsupported("geometry(Point, 4326)")?
  text                String
  summary             Summary?
  keywords            Keywords?
  themes              Themes?
  translations        Translation[]
  commentaries        Commentary[]
  sources             Source[]
}

model Book {
	id                  Int @id @default(autoincrement())
  title               String
  alt_title           String?
  excerpt             String?
  year                Int?
  month               Int?
  day                 Int?
  placename           String?
  geometry            Unsupported("geometry(Point, 4326)")?
  sections            Section[]
  publications        Publication[]
  translations        Translation[]
  commentaries        Commentary[]
  sources             Source[]
}

model Publication {
	id                  Int @id @default(autoincrement())
  title               String
  publisher           String?
  language            String?
  year                Int?
  month               Int?
  day                 Int?
  placename           String?
  geometry            Unsupported("geometry(Point, 4326)")?
  bookId              Int?
  book                Book? @relation(fields: [bookId], references: [id], onDelete: Cascade)
}

model Source {
	id                  Int @id @default(autoincrement())
  publication         String?
  author              String?
  title               String?
  url                 String?
  letterId            Int?
  letter              Letter? @relation(fields: [letterId], references: [id], onDelete: Cascade)
  bookId              Int?
  book                Book? @relation(fields: [bookId], references: [id], onDelete: Cascade)
}

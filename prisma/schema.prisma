generator client {
  provider = "prisma-client-js"
}

generator kysely {
  provider = "prisma-kysely"
  output = "./kysely"
  fileName = "types.ts"
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  directUrl  = env("DIRECT_URL")
}

model Section {
	id                  Int @id @default(autoincrement())
  title               String?
  text                String
  pages               Int[]
  position            Int?
  workId              Int
  work                Work? @relation(fields: [workId], references: [id], onDelete: Cascade)
  metadata            Metadata?
}

model Metadata {
	id                  Int @id @default(autoincrement())
  summary             String
  keywords            String[]
  themes              String[]
  vector_small        Unsupported("vector(1536)")?
  vector_large        Unsupported("vector(3072)")?
  sectionId           Int? @unique
  section             Section? @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  letterId            Int? @unique
  letter              Letter? @relation(fields: [letterId], references: [id], onDelete: Cascade)
}

model Translation {
	id                  Int @id @default(autoincrement())
  translator          String?
  text                String
  language            String
  url                 String?
  title               String?
  workId              Int?
  work                Work? @relation(fields: [workId], references: [id], onDelete: Cascade)
  letterId            Int?
  letter              Letter? @relation(fields: [letterId], references: [id], onDelete: Cascade)
}

model Commentary {
	id                  Int @id @default(autoincrement())
  commentator         String?
  text                String
  url                 String?
  title               String?
  workId              Int?
  work                Work? @relation(fields: [workId], references: [id], onDelete: Cascade)
  letterId            Int?
  letter              Letter? @relation(fields: [letterId], references: [id], onDelete: Cascade)
}

model Letter {
	id                  Int @id @default(autoincrement())
  title               String
  alt_title           String?
  reference           String?
  volume              String?
  pages               Int[]
  year                Int?
  season              Int?
  month               Int?
  day                 Int?
  author              String?
  recipient           String?
  date_text           String?
  place_text          String?
  origin              String?
  origin_geo          Unsupported("geometry(Point, 4326)")?
  destination         String?
  destination_geo     Unsupported("geometry(Point, 4326)")?
  related_to          String?
  text                String
  metadata            Metadata?
  translations        Translation[]
  commentaries        Commentary[]
  sources             Source[]
}

model Work {
	id                  Int @id @default(autoincrement())
  title               String
  alt_title           String?
  blurb               String?
  year                Int?
  month               Int?
  day                 Int?
  placename           String?
  geometry            Unsupported("geometry(Point, 4326)")?
  sections            Section[]
  publications        Publication[]
  translations        Translation[]
  commentaries        Commentary[]
  sources             Source[]
}

model Publication {
	id                  Int @id @default(autoincrement())
  title               String
  publisher           String?
  language            String?
  year                Int?
  month               Int?
  day                 Int?
  placename           String?
  geometry            Unsupported("geometry(Point, 4326)")?
  workId              Int?
  work                Work? @relation(fields: [workId], references: [id], onDelete: Cascade)
}

model Source {
	id                  Int @id @default(autoincrement())
  publication         String?
  author              String?
  title               String?
  url                 String?
  letterId            Int?
  letter              Letter? @relation(fields: [letterId], references: [id], onDelete: Cascade)
  workId              Int?
  work                Work? @relation(fields: [workId], references: [id], onDelete: Cascade)
}

generator client {
  provider = "prisma-client-js"
}

generator kysely {
  provider = "prisma-kysely"
  output = "./kysely"
  fileName = "types.ts"
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  directUrl  = env("DIRECT_URL")
}

model Entry {
	id                  Int @id @default(autoincrement())
  vector_small        Unsupported("vector(1536)")?
  vector_large        Unsupported("vector(3072)")?
  text                String
  position            Int?
  workId              Int
  work                Work @relation(fields: [workId], references: [id], onDelete: Cascade)
  translations        Translation[]
  commentaries        Commentary[]
}

model Summary {
	id                  Int @id @default(autoincrement())
  text                String
  vector_small        Unsupported("vector(1536)")?
  vector_large        Unsupported("vector(3072)")?
  workId              Int @unique
  work                Work @relation(fields: [workId], references: [id], onDelete: Cascade)
}

model Keywords {
	id                  Int @id @default(autoincrement())
  keywords            String[]
  vector_small        Unsupported("vector(1536)")?
  vector_large        Unsupported("vector(3072)")?
  workId              Int @unique
  work                Work @relation(fields: [workId], references: [id], onDelete: Cascade)
}

model Themes {
	id                  Int @id @default(autoincrement())
  themes              String[]
  vector_small        Unsupported("vector(1536)")?
  vector_large        Unsupported("vector(3072)")?
  workId              Int @unique
  work                Work @relation(fields: [workId], references: [id], onDelete: Cascade)
}

model Translation {
	id                  Int @id @default(autoincrement())
  translator          String?
  text                String
  language            String
  url                 String?
  workId              Int?
  work                Work? @relation(fields: [workId], references: [id], onDelete: Cascade)
  entryId             Int?
  entry               Entry? @relation(fields: [entryId], references: [id], onDelete: Cascade)
}

model Commentary {
	id                  Int @id @default(autoincrement())
  commentator         String?
  text                String
  url                 String?
  workId              Int?
  work                Work? @relation(fields: [workId], references: [id], onDelete: Cascade)
  entryId             Int?
  entry               Entry? @relation(fields: [entryId], references: [id], onDelete: Cascade)
}

model Metadata {
	id                  Int @id @default(autoincrement())
  reference           String?
  volume              String?
  pages               Int[]
  related_to          String?
  year                Int?
  season              Int?
  month               Int?
  day                 Int?
  date_text           String?
  placename           String?
  geometry            Unsupported("geometry(Point, 4326)")?
  workId              Int? @unique
  work                Work? @relation(fields: [workId], references: [id], onDelete: Cascade)
}

model Work {
	id                  Int @id @default(autoincrement())
  title               String
  type                String?
  alt_title           String?
  notes               String?
  entries             Entry[]
  metadata            Metadata?
  summary             Summary?
  keywords            Keywords?
  themes              Themes?
  translations        Translation[]
  commentaries        Commentary[]
  sources             Source[]
}

model Source {
	id                  Int @id @default(autoincrement())
  name                String?
  url                 String?
  workId              Int?
  work                Work? @relation(fields: [workId], references: [id], onDelete: Cascade)
}
